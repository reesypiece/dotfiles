Config { 

   -- appearance
   -- i listen to songs called ラグトレイン and 봉봉쇼콜라...
     font =         "xft:JetBrainsMono Nerd Font:size=9:bold:antialias=true,Noto Sans CJK JP:size=9:bold:antialias=true,Noto Sans CJK KR:size=9:bold:antialias=true"
   , bgColor =      "#292a44"
   , fgColor =      "#e8e6ed"
   , position =     Top
   , border =       BottomB
   , borderColor =  "#c17ff8"

   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = " %StdinReader% }{ %nowplaying% %CYYZ% | %alsa:default:Master% | %battery% | %multicpu% | %memory% | %dynnetwork% | %date% "

   -- general behavior
   , lowerOnStart =     True    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   -- plugins
   --   Numbers can be automatically colored according to their value. xmobar
   --   decides color based on a three-tier/two-cutoff system, controlled by
   --   command options:
   --     --Low sets the low cutoff
   --     --High sets the high cutoff
   --
   --     --low sets the color below --Low cutoff
   --     --normal sets the color between --Low and --High cutoffs
   --     --High sets the color above --High cutoff
   --
   --   The --template option controls how the plugin is displayed. Text
   --   color can be set by enclosing in <fc></fc> tags. For more details
   --   see http://projects.haskell.org/xmobar/#system-monitor-plugins.
   , commands = 

        -- weather monitor
        [ Run Weather "CYYZ" [ "--template", "<skyCondition> | <fc=#3fc4de><tempC></fc>\xfa03"
                             ] 36000

        -- network activity monitor (dynamic interface resolution)
        , Run DynNetwork     [ "--template" , "\xf1eb <tx>kB/s|<rx>kB/s"
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "#29d398"
                             , "--normal"   , "#fab795"
                             , "--high"     , "#e95678"
                             ] 10

        -- cpu activity monitor
        , Run MultiCpu       [ "--template" , "\xf2db <total0>%|<total1>%"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "#29d398"
                             , "--normal"   , "#fab795"
                             , "--high"     , "#e95678"
                             ] 10

        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "\f2c7 <core0>°C|<core1>°C"
                             , "--Low"      , "70"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "#29d398"
                             , "--normal"   , "#fab795"
                             , "--high"     , "#e95678"
                             ] 50
                          
        -- memory usage monitor
        , Run Memory         [ "--template" ,"\xf85a <usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "#29d398"
                             , "--normal"   , "#fab795"
                             , "--high"     , "#e95678"
                             ] 10

        -- battery monitor
        , Run Battery        [ "--template" , "<acstatus>"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "#e95678"
                             , "--normal"   , "#fab795"
                             , "--high"     , "#29d398"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o" , "<left>% (<timeleft>) \xf57d"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#dAA520>\xf583</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=#006000>\xf584</fc>"
                             ] 50

        , Run Alsa "default" "Master"
                             [ "--template", "\xf028 <volumestatus>"
                             , "--suffix"  , "True"
                             , "--"
                             , "--on", ""
                             ]

        -- time and date indicator 
        --   (%F = y-m-d date, %a = day of week, %T = h:m:s time)
        , Run Date           "\xf073 %a %F %T" "date" 10
        -- for workspaces
        , Run StdinReader
		-- for currently playing song
		, Run Com "/home/pochama/.local/bin/nowplaying" [] "nowplaying" 10
        ]
   }

-- vim: ft=haskell
